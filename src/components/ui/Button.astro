---
interface Props {
  href: string;
  variant?: 'whatsapp' | 'telegram' | 'teal';
  class?: string;
}

const { href, variant = 'teal', class: className = '' } = Astro.props;

const variantClasses: Record<string, string> = {
  whatsapp: 'bg-[#25D366] hover:bg-[#1fb855] text-white',
  telegram: 'bg-[#2AABEE] hover:bg-[#229ED9] text-white',
  teal: 'bg-teal hover:bg-teal-dark text-white',
};
---

<a
  href={href}
  target="_blank"
  rel="noopener noreferrer"
  class:list={[
    'inline-flex items-center gap-2 rounded-full px-6 py-3 font-semibold transition-all duration-200 hover:scale-105',
    variantClasses[variant],
    className,
  ]}
>
  <slot />
</a>
